Map TABGROUP_TO_UUID = Collections.synchronizedMap(new HashMap());
Set SEEN_UUIDS       = Collections.synchronizedSet(new HashSet());

String getUuid(String tabgroup) {
  return TABGROUP_TO_UUID.get(tabgroup);
}

