  callback = fun2str("updateDisplayedTabGroup", ref);
  addOnEvent(ref, "show",   callback, PRECEDENCE_MAX);
  addOnEvent(ref, "create", callback, PRECEDENCE_MAX);

  // Trigger on leave tab group event
  callback = "onLeaveTabGroup()";
  addOnEvent(ref, "show", callback, PRECEDENCE_MAX);
}

